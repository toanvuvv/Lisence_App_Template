{
  "name": "electron-license-app",
  "version": "1.0.0",
  "description": "Electron App with License Management",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "security-check": "npm audit && npm outdated",
    "test-security": "node src/utils/security-test.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "crypto-js": "^4.1.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.yourcompany.electronlicenseapp",
    "productName": "Electron License App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
